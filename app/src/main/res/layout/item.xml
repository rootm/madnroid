<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"

    android:clickable="true"
    android:id="@+id/row_layout"
    android:layout_marginBottom="5dp"

    >

    <ImageView
        android:id="@+id/album_image"
        android:layout_width="75dp"
        android:clickable="false"
        android:layout_height="75dp"
       />

    <ImageView
            android:id="@+id/fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/btn_star_big_off"
            android:clickable="true"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="8dp" />

    <TextView
            android:id="@+id/song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxLines="1"
            android:text="skdfklsdfklsdfklsdkfs"
            android:layout_marginRight="50dp"
            android:paddingLeft="16dp"
            android:layout_centerVertical="true"
           android:layout_toRightOf="@id/album_image"
           />

    <com.example.muvindu.recyclerdemo.widgets.vizualizer
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:layout_alignTop="@+id/fav"
        android:layout_toLeftOf="@+id/fav"
        android:layout_toStartOf="@+id/fav"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp"
        android:visibility="visible"/>


</RelativeLayout>